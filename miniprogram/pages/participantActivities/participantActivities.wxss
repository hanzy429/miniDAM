/* miniprogram/pages/participantActivities/participantActivities.wxss */

.title{
    width:100%;
    text-align:center;
    font-size:20px;
    font-weight:bold;
    margin-top:10px;
}

.container-mid{
    width:100%;
    margin-top:20px;

}


.container-mid .container-act{
    width:100%;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    background-color: #F7F7F7;
    margin-bottom:10px;
    border-bottom:1px solid #E6E6E6;
}

.container-mid .container-act .row{
    width:100%;
    display: flex;
    flex-direction: row;
    align-items: flex-start;
    margin-top:2px;
    margin-bottom:2px;
}

.container-mid .container-act .row .row-title{
    width:50%;
    text-align:center;
}

.container-mid .container-act .row .row-content{
    width:50%;
}