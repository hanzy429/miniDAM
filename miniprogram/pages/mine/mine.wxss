/* miniprogram/pages/mine/mine.wxss */
.container-top .user-head{
    width: 200rpx;
    height: 200rpx;
}

.user-info{
    width:100%;
    height:80px;
    display: flex;
    flex-direction: row;
    align-items: center;

}

.user-info .img{
 margin-left:10px;

}

.user-info .img image{
    width:70px;
    height:70px;
}

.user-info .nickName{
    margin-left:40px;
    font-size:24px;
}

.statistics-info-title{
    width:100%;
    text-align:center;
    font-size:20px;
}

.statistics-info{
    margin-top:6px;
    width:100%;
    height:104px;
    display: flex;
    flex-direction: row;
    background-color: #F7F7F7;
}



.statistics-info .create{
    width:100%;
    border-right:1px solid #E6E6E6;
    border-bottom:1px solid #E6E6E6;
    border-top:1px solid #E6E6E6;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.statistics-info .create .title{
border-bottom:1px solid #C4C4C4;
    font-size: 20px;
    padding:12px;
    font-weight:bold;
}
.statistics-info .create .number{
    font-size: 16px;
    margin-top:7px;
}

.statistics-info .create .more{
    font-size:10px;
    margin-top:3px;

}

.statistics-info .participate{
    width:100%;
    border-right:1px solid #E6E6E6;
    border-bottom:1px solid #E6E6E6;
    border-top:1px solid #E6E6E6;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.statistics-info .participate .title{
border-bottom:1px solid #C4C4C4;
    font-size: 20px;
    padding:12px;
    font-weight:bold;

}
.statistics-info .participate .number{
    font-size: 16px;
    margin-top:7px;
}

.statistics-info .participate .more{
    font-size:10px;
    margin-top:3px;

}

.row{
    width:100%;
}

.history-serch{
    font-size:18px;
    margin-left:10px;
    margin-top:14px;
}



